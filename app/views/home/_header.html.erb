<%= stylesheet_link_tag "custom", "data-turbo-track": "reload" %>

<div class="container-fluid  ">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          
            <%= link_to root_path do %>
              <%= image_tag("logo-4.jpg" , height: '40', width: '180') %>
            <% end %>
          
            <li> <%= link_to "ADD MOVIES",new_movie_path,class:'nav-link text-dark' %></li>
            <li> <%= link_to "ALL MOVIES",movies_path,class:'nav-link text-dark' %></li>
            <li> <%= link_to "ABOUT", home_about_path,class:'nav-link text-dark' %></li>
        </ul>

        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
          <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
        </form>
        <div class="text-end">

           <% if user_signed_in? %>
            <%= link_to 'Edit User', edit_user_registration_path, class:'btn btn-light'%>
             <%= link_to "Sign Out", destroy_user_session_path, data: {turbo_method: :delete, turbo_confirm: :"Are you sure you want to log out"} ,class: "btn btn-light"%>


             <% else %>
             <%= link_to "Sign Up",   new_user_registration_path, class:"btn btn-light"%>
             <%= link_to "Sign In",  new_user_session_path, class:"btn btn-light"%>
            <% end %>
      
          
        </div>
      </div>
    </div>
