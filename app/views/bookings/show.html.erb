<div class="container">
  <div class="rows">  
    <h1 style="text-align:center;">Tickets</h1>
    <table class="table table-bordered">
      <tbody>
        <tr> 
        <td>Theater_name </td>
        <td><%= @booking.theater_name %></td>
        </tr>
        <tr>
          <td>Total Tickets</td>
          <td><%= @booking.howmany_seats %></td>
        </tr>
        <tr> 
          <td>Seat Number </td>
          <td><%= @booking.select_seats %></td>
        </tr>
        <tr>              
          <td>Date </td>
          <td><%= @booking.date %></td>
        </tr>
        <tr>
          <td>Time </td>
          <td><%= @booking.time %></td>
        </tr>
      </tbody>
    </table>
    <div class="lead">

	   <%= link_to "Cancel", booking_path(@booking),data: {turbo_method: :delete, turbo_confirm: "Are you sure....?"}, class:'btn btn-secondary' %>
    </div>
  </div>
</div>
